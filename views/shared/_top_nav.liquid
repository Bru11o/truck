<nav class="navbar">
	<ul class="navbar-nav">
	  {% assign menuItems = 'topNavMenuTemplateTwentySeven' | menu_by_code %}
    {% for menuItem in menuItems %}
      {% if menuItem.childrens %}
        <li class="nav-item dropdown nav-item-dropdown">
          <a href="{{menuItem.url}}" class="nav-link dropdown-toggle" {{menuItem.html_attribute}} style="{{menuItem.css_style}}" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">{{menuItem.name}}</a>
          <ul class="dropdown-menu">
            <div class="menu-back">
                <img src="{{ 'arrow-back.svg' | asset_url}}" alt="arrow" />
                Назад
            </div>
            {% for subMenuItem in menuItem.childrens %}
              <li>
                <a href="{{subMenuItem.url}}" target="{{subMenuItem.target_type}}" {{subMenuItem.html_attribute}} style="{{subMenuItem.css_style}}" class="dropdown-item">
                  {{subMenuItem.name}}
                </a>
              </li>
            {% endfor %}
          </ul>
        </li>
      {% else %}
        <li class="nav-item">
          <a href="{{menuItem.url}}" class="nav-link" target="{{menuItem.target_type}}" {{menuItem.html_attribute}} style="{{menuItem.css_style}}">{{menuItem.name}}</a>
        </li>
      {% endif %}
    {% endfor %}
	</ul>
</nav>
